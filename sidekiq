#!/bin/sh

# chkconfig: 2345 85 70
# description: sidekiq shell

NAME="sidekiq"
ENV="production"

ROOT_DIR="/var/www/app/current"
USER="app"
PID="${ROOT_DIR}/tmp/pids/sidekiq-0.pid"
CONF="${ROOT_DIR}/config/sidekiq.yml"

start()
{
  if [ -e $PID ]; then
    echo "$NAME already started";
    exit 1;
  fi
  echo "start $NAME";
  su - $USER -c "cd $ROOT_DIR && bundle exec sidekiq -C $CONF -P $PID -e $ENV -d"
}

stop()
{
  if [ ! -e $PID ]; then
    echo "$NAME not started";
    exit 1;
  fi
  echo "stop $NAME";
  su - $USER -c "kill -QUIT `cat ${PID}`"
  su - $USER -c "rm -f $PID"
}

force_stop()
{
  if [ ! -e $PID ]; then
    echo "$NAME not started";
    exit 1;
  fi
  echo "stop $NAME";
  su - $USER -c "kill -TERM `cat ${PID}`"
  su - $USER -c "rm -f $PID" $USER
}

reload()
{
  if [ ! -e $PID ]; then
    echo "$NAME not started";
    start
    exit 0;
  fi
  echo "reload $NAME";
  su - $USER -c "kill -HUP `cat ${PID}`"
}

restart()
{
    stop
    start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  force-stop)
    force_stop
    ;;
  reload)
    reload
    ;;
  restart)
    restart
    ;;
  *)
    echo "Syntax Error: release [start|stop|force-stop|reload|restart]"
    ;;
esac

exit
